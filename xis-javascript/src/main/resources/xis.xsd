<?xml version="1.0" encoding="ISO-8859-1"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="https://xis.one"
           elementFormDefault="qualified">
    <xs:element name="foreach">
        <xs:complexType>
            <xs:attribute name="var" type="xs:string" use="required"/>
            <xs:attribute name="array" type="xs:string" use="required"/>
        </xs:complexType>
    </xs:element>

    <xs:element name="widget-container" fixed="">
        <xs:complexType>
            <xs:attribute name="default-widget" type="xs:string" use="required"/>
            <xs:attribute name="container-id" type="xs:string" use="required"/>
        </xs:complexType>
    </xs:element>


    <xs:element name="if">
        <xs:complexType>
            <xs:attribute name="condition" type="xs:string" use="required"/>
        </xs:complexType>
    </xs:element>

    <xs:attribute name="page" type="xs:string"/>
    <xs:attribute name="widget" type="xs:string"/>
    <xs:attribute name="widget-container" type="xs:string"/>
    <xs:attribute name="default-widget" type="xs:string"/>
</xs:schema>
