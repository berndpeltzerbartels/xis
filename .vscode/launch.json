    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Programm starten",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to GraalVM JS (Port 4242)",
            "address": "localhost",
            "port": 4242,
            "restart": false,
            "timeout": 30000,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": null
        }
    ]
}